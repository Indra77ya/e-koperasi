<IfModule mod_rewrite.c>
    RewriteEngine On

    # ATURAN PENTING:
    # Jika request sudah mengarah ke folder "public", biarkan saja (JANGAN redirect lagi)
    RewriteCond %{REQUEST_URI} !^/public/

    # Jika belum, baru arahkan ke folder public
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

